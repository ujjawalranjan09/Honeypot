# Honey-Pot API Environment Configuration
# Copy this file to .env and fill in your values

# ============== Required ==============

# API Key for authenticating requests to the honeypot
HONEYPOT_API_KEY=your-secret-api-key-here

# Google Gemini API Key for AI response generation
# Get one at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# ============== Optional ==============

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format ('json' for production, 'text' for development)
LOG_FORMAT=json

# Enable/disable rate limiting (true/false)
RATE_LIMIT_ENABLED=true

# Note: Most other configuration is in config.py
# Adjust thresholds, weights, and limits there as needed
