{
  "buildCommand": "pip install --no-cache-dir -r requirements.txt",
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index.py" }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 60,
      "memory": 1024,
      "includeFiles": "models/**",
      "excludeFiles": "{tests/**,*.md,*.csv,*.json,*.txt,frontend/**,__pycache__/**,.git/**,venv/**,.venv/**,*.pyc,.env*}"
    }
  }
}